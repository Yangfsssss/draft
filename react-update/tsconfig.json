{
	"compilerOptions": {
		"target": "ES5",
		"noImplicitAny": false,
		"module": "ES6",
		"removeComments": false,
		"sourceMap": false,
		"outDir": "", //你要生成js的目录
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true
		//  "preserveWhitespace": true
	}
}
